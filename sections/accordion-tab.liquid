{{ 'accordion-tab.css' | asset_url | stylesheet_tag }}
<script src="{{ 'accordion-tab.js'| asset_url }}" defer="defer"></script>

{% for block in section.blocks %}
  <accordion-tab class="page-width">
    <div class="accordion__header" data-header>
      <h2>{{ block.settings.title }}</h2>
    </div>
    <div class="accordion__content" ata-content>
      <p>{{ block.settings.content }}</p>
    </div>
  </accordion-tab>
{% endfor %}

{% schema %}
{
  "name": "Accordion Tab",
  "settings": [],
  "presets": [
    {
      "name": "Accordion Tab"
    }
  ]
}
{% endschema %}
